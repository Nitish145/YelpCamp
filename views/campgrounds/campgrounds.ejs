<% include  ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>

    <div style="padding: 0px 0px 20px 0px;" class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img style="width: 100%; height: 180px;" src="<%= campground.image %>">
                </div>
                <div class="caption">
                    <strong><h4><%= campground.name %></h4></strong>
                </div>
                <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">More Info</a>
            </div>
        <% }) %>
    </div>
</div>

<% include  ../partials/footer %>
